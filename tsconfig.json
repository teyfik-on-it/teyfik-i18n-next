{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": ["es2017", "es7", "es6", "dom"],
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "node_modules/next/types/index.d.ts",
    "node_modules/next/types/global.d.ts"
  ]
}
